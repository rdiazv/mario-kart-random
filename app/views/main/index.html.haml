          %ul.list-unstyled.tracks
            %li.track Circuito de Luigi
            %li.track Pradera Mu Mu
            %li.track Barranco Champiñón
            %li.track Fábrica de Toad

      .col-xs-3
        .tournament
          .title
            = image_tag 'tournament/flor.webp'
