.container
  .players
    .row
      .col-xs-4
        = render partial: 'character', locals: { player: 'p1' }
        = render partial: 'character', locals: { player: 'p3' }

      .col-xs-4
        .controls
          %button(type="button" data-new-game) Nuevo juego

        .roster-bg
          .roster
            = render partial: 'roster_selection', locals: { player: 'p1' }
            = render partial: 'roster_selection', locals: { player: 'p2' }
            = render partial: 'roster_selection', locals: { player: 'p3' }
            = render partial: 'roster_selection', locals: { player: 'p4' }

            = image_tag 'roster.png'

      .col-xs-4
        = render partial: 'character', locals: { player: 'p2' }
        = render partial: 'character', locals: { player: 'p4' }

  .tournaments
    .row
      .col-xs-3
        .tournament
          .title
            = image_tag 'tournament/champinon.webp'
